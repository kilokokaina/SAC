<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="240.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mesi.scipower.controller.HelloController">
   <children>
      <TextField fx:id="loginField" prefWidth="235.0" promptText="Login:">
         <VBox.margin>
            <Insets bottom="5.0" left="15.0" right="15.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordField" promptText="Paasword:">
         <VBox.margin>
            <Insets bottom="5.0" left="15.0" right="15.0" />
         </VBox.margin>
      </PasswordField>
      <Button fx:id="enterButton" mnemonicParsing="false" onAction="#getCredentials" text="Enter" />
   </children>
</VBox>
