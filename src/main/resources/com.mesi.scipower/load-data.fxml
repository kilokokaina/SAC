<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mesi.scipower.controller.DataController">
   <children>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="358.0">
         <children>
            <Button mnemonicParsing="false" onAction="#refresh" text="Обновить">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#loadData" text="Загрузить данные">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="fileName" />
         </children>
      </HBox>
      <HBox>
         <children>
            <TableView fx:id="documentTable" />
         </children>
      </HBox>
   </children>
</VBox>
